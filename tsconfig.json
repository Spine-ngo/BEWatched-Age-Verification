{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": ["@types", "./node_modules/@types"],
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "old",
    "test/**/*"
  ],
}
